<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:background="#FFFFFF">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="25dp"
            android:padding="15dp"
            android:text="Forgot password?"
            android:textColor="#747474"
            android:textSize="12dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_view_id2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="The link to reset your password will be sent to your registered email."
            android:textSize="12dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="150dp"
            android:textStyle="bold"
            android:textColor="#747474"
            android:padding="15dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/text_view_id3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:width="300dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="220dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/text"
            android:hint="Email"
            android:padding="15dp"
            android:textColorHint="#747474"
            android:textStyle="bold"
            android:textSize="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/image1"
            android:layout_width="30px"
            android:layout_height="40px"

            android:layout_marginTop="280dp"
            android:layout_marginLeft="45dp"
            />
        <TextView
            android:id="@+id/text_view_id5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is not a valid email"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="280dp"
            android:textColor="#BF574A"
            android:textSize="8dp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/image1"
            android:layout_width="30px"
            android:layout_height="40px"

            android:layout_marginTop="300dp"
            android:layout_marginLeft="45dp"
            />
        <TextView
            android:id="@+id/text_view_id7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This email is not registered with us"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="300dp"
            android:textColor="#BF574A"
            android:textSize="8dp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/positivePopupBtn"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:text="CONTINUE"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/button"
            android:textColor="#FFFFFF"

            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>