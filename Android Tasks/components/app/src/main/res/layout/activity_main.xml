<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxBackgroundColor="@color/colorwhite"
            app:placeholderText="Email"
            app:boxStrokeColor="@color/colortext"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxBackgroundColor="@color/colorwhite"
            app:placeholderText="Password"
            app:passwordToggleEnabled="true"
            app:boxStrokeColor="@color/colortext"
            android:layout_marginTop="300dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/material_button"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="LOGIN"
            android:textSize="12dp"
            android:textAlignment="center"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="@color/colorbutton"

            android:layout_marginTop="60dp"
            app:backgroundTint="@color/colorbutton"
            app:cornerRadius="25dp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="CONTINUE"
            android:textSize="12dp"
            android:textAlignment="center"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="@color/colorbutton"
            android:layout_marginStart="200dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="60dp"
            app:backgroundTint="@color/colorbutton"
            app:cornerRadius="25dp"


            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="200dp"
            android:paddingBottom="5dp"
            android:src="@drawable/ic_dehaze_black_24dp"
            />


<com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
android:id="@+id/floating_action_button"
style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
android:layout_width="20dp"
android:layout_height="20dp"
android:layout_gravity="bottom|right"
app:icon="@drawable/ic_add_black_24dp"
app:iconTint="@color/colorWhite"
android:paddingLeft="5dp"
android:paddingRight="5dp"
android:paddingStart="5dp"
android:paddingEnd="5dp"
android:paddingTop="5dp"
android:paddingBottom="5dp"
app:backgroundTint="@color/colorBlue"
    android:layout_marginTop="150dp"
    android:layout_marginLeft="30dp"

    />
        <com.google.android.material.button.MaterialButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="@color/colorbutton"
            app:icon="@drawable/ic_arrow_forward_black_24dp"
            app:iconGravity="end"
            app:cornerRadius="20dp"
            app:iconSize="20dp"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="200dp"
            />
        <RadioButton xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            style="@style/Widget.MaterialComponents.CompoundButton.RadioButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:width="10dp"
            app:useMaterialThemeColors="false"
            android:buttonTint="@color/radioyellow"
            android:layout_marginTop="250dp"/>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/floating_action_button2"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|right"
            app:icon="@drawable/ic_dehaze_black_24dp"
            app:iconSize="20dp"
            app:iconTint="@color/colorWhite"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:backgroundTint="@color/colorBlue"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="100dp"
            />
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton

            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|right"
            app:icon="@drawable/ic_remove_black_24dp"
            app:iconTint="@color/colorWhite"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:backgroundTint="@color/colorBlue"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="150dp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:text="done"
            android:textSize="10sp"
            app:rippleColor="@color/colorbutton"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:backgroundTint="@color/colorbutton"
            app:cornerRadius="20dp"
            android:layout_marginTop="200dp"
            />
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton

            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|right"
            app:icon="@drawable/ic_attach_file_black_24dp"
            app:iconTint="@color/colorWhite"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:backgroundTint="@color/colorBlue"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="250dp"

            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:text="Submit"
            android:textSize="10sp"
            app:rippleColor="@color/colorbutton"
            android:layout_marginStart="250dp"
            android:layout_marginLeft="250dp"
            android:backgroundTint="@color/colorbutton"
            app:cornerRadius="20dp"
            android:layout_marginTop="200dp"
            />
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton

            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|right"
            app:icon="@drawable/ic_notifications_none_black_24dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:backgroundTint="@color/colorwhite"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="290dp"

            />
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton

            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|right"
            app:icon="@drawable/ic_delete_black_24dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:backgroundTint="@color/colorwhite"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="330dp"

            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxBackgroundColor="@color/colorwhite"
            app:placeholderText="search"
            app:boxStrokeColor="@color/colortext"
            android:layout_marginTop="380dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>