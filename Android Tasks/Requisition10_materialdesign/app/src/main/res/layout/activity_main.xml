<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGray"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/image1"
                android:contentDescription="TODO"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:background="@color/colorShade">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="REQUISITION"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circle"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#FFFFFF"
                        android:textSize="10dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="5dp"
                        android:background="@drawable/dotline"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:id="@+id/TextView03"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circle2"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="#D3D3D3"
                        android:textSize="10dp"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="5dp"
                        android:background="@drawable/dotline"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:id="@+id/TextView04"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circle2"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="#D3D3D3"
                        android:textSize="10dp"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="5dp"
                        android:background="@drawable/dotline"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:id="@+id/TextView5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circle2"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="#D3D3D3"
                        android:textSize="10dp"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="5dp"
                        android:background="@drawable/dotline"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:id="@+id/TextView06"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circle2"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="#D3D3D3"
                        android:textSize="10dp"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="5dp"
                        android:background="@drawable/dotline"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circle2"
                        android:gravity="center"
                        android:text="6"
                        android:textColor="#D3D3D3"
                        android:textSize="10dp"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line"
            android:orientation="vertical"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="NOTE"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris mattis, tortor sit amet tempor vehicula."
                android:textSize="10dp"
                android:textColor="#747474"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"/>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="85dp"
                android:layout_marginTop="20dp"
                app:boxStrokeColor="@color/colortext"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"



                    />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:text="REQUEST TYPE"
                android:textColor="#000000"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="60dp"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris mattis, tortor sit amet tempor vehicula."
                android:textSize="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:textColor="#747474"/>
            <RadioButton xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useMaterialThemeColors="false"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:buttonTint="@color/colorradio"
                android:text="SELF"
                android:textColor="#747474"
                android:textSize="12dp"
                android:paddingLeft="20dp"/>
            <RadioButton xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useMaterialThemeColors="false"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:buttonTint="@color/colorradio"
                android:text="TEAM / DEPARTMENT / BRANCH"
                android:textColor="#747474"
                android:textSize="12dp"
                android:paddingLeft="20dp"/>

            <RadioButton xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useMaterialThemeColors="false"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:textColor="#747474"
                android:textSize="12dp"
                android:buttonTint="@color/colorradio"
                android:text="SOMEONE ELSE"
                android:paddingLeft="20dp"/>
        </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    >
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="@string/save"
                android:textColor="#595959"
                android:textStyle="bold"
                android:textSize="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="50dp"
                android:paddingTop="5dp"
                android:layout_marginBottom="10dp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/material_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEXT-->"
                style="@style/Widget.MaterialComponents.Button"
                android:backgroundTint="@color/colorbutton"
                app:cornerRadius="18dp"
                android:layout_marginStart="120dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="50dp"
                />
                </LinearLayout>
        </LinearLayout>

    </ScrollView>



</RelativeLayout>