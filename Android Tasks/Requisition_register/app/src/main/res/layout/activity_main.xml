<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/menubar"
        android:src="@drawable/image"
        android:paddingRight="350dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="TODO" />
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Requisition"
        android:textSize="14sp"
        android:background="@drawable/menubar"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image1"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/no1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/circle2"
        android:text="1"
        android:gravity="center"
        android:textColor="@color/colorno"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/dot1"
        android:layout_width="20dp"
        android:layout_height="5dp"
        android:background="@drawable/dottedline"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintLeft_toRightOf="@id/no1"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/no2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/circle2"
        android:text="2"
        android:textColor="@color/colorno"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintLeft_toRightOf="@id/dot1"
        android:layout_marginTop="18dp"/>
    <TextView
        android:id="@+id/dot2"
        android:layout_width="20dp"
        android:layout_height="5dp"
        android:background="@drawable/dottedline"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintLeft_toRightOf="@id/no2"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/no3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/circle2"
        android:text="3"
        android:textColor="@color/colorno"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintLeft_toRightOf="@id/dot2"
        android:layout_marginTop="18dp"/>
    <TextView
        android:id="@+id/dot3"
        android:layout_width="20dp"
        android:layout_height="5dp"
        android:background="@drawable/dottedline"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintLeft_toRightOf="@id/no3"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/no4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/circle2"
        android:text="4"
        android:textColor="@color/colorno"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintLeft_toRightOf="@id/dot3"
        android:layout_marginTop="18dp"/>
    <TextView
        android:id="@+id/dot4"
        android:layout_width="20dp"
        android:layout_height="5dp"
        android:background="@drawable/dottedline"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintLeft_toRightOf="@id/no4"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/no5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/circle2"
        android:text="5"
        android:textColor="@color/colorno"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintLeft_toRightOf="@id/dot4"
        android:layout_marginTop="18dp"/>
    <TextView
        android:id="@+id/dot5"
        android:layout_width="20dp"
        android:layout_height="5dp"
        android:background="@drawable/dottedline"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintLeft_toRightOf="@id/no5"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/no6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/circle"
        android:text="6"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintLeft_toRightOf="@id/dot5"
        android:layout_marginTop="18dp"/>
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ACKNOWLEDGEMENT"
        app:layout_constraintTop_toBottomOf="@id/no1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/colorack"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorsen"
        android:textSize="11sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="@string/Lorem"
        app:layout_constraintTop_toBottomOf="@id/text2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:textSize="9sp"
        android:textColor="@color/colorsen"
        />



    



</androidx.constraintlayout.widget.ConstraintLayout>