<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    public class MainActivity extends Activity {

    protected void onCreate(Bundle savedInstanceState) {
    super.onCreate(savedInstanceState);
    setContentView(R.layout.activity_main);
    final TextView helloTextView = (TextView) findViewById(R.id.text_view_id);
    helloTextView.setText(R.string.user_greeting);
    }

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_view_id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Login"
            android:textSize="14dp"
            android:height="75dp"
            android:width="100dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="75dp"
            android:textStyle="bold"
            android:textColorHint="#747474"
            android:padding="15dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/text_view_id2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:width="300dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/text"
            android:hint="Email or Phone Number"
            android:padding="15dp"
            android:textColorHint="#747474"
            android:textStyle="bold"
            android:textSize="10dp"


            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/image"
            android:layout_width="50px"
            android:layout_height="55px"

            android:layout_marginTop="215dp"
            android:layout_marginLeft="50dp"
            />
        <TextView
            android:id="@+id/text_view_id4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This field is required"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="215dp"
            android:textColor="#BF574A"

            />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/text_view_id3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:width="300dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/text"
            android:hint="Password"
            android:padding="15dp"
            android:textColorHint="#747474"
            android:textStyle="bold"
            android:textSize="10dp"


            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/image"
            android:layout_width="50px"
            android:layout_height="55px"

            android:layout_marginTop="315dp"
            android:layout_marginLeft="50dp"
            />
        <TextView
            android:id="@+id/text_view_id5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This field is required"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="315dp"
            android:textColor="#BF574A"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_view_id6"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Forgot password?"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="225dp"


            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/button_id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="LOGIN"
            android:textSize="12dp"

            android:layout_marginLeft="100dp"
            android:layout_marginTop="425dp"
            android:background="@drawable/button"
            android:textColor="#FFFFFF"

            />
    </LinearLayout>






    }

</androidx.constraintlayout.widget.ConstraintLayout>