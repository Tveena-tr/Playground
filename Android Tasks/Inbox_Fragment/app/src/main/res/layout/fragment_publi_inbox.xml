                    android:textSize="10sp"
                    android:textStyle="normal"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_expand_less_black_24dp"
