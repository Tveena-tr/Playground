                    app:layout_constraintTop_toTopOf="@id/content4"
                    android:textColor="#707070"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text4"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text3"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    app:boxCornerRadiusTopEnd="7dp"
                    app:boxCornerRadiusBottomStart="7dp"
                    app:boxCornerRadiusBottomEnd="7dp"
                    app:boxCornerRadiusTopStart="7dp"
                    app:boxStrokeColor="#EDEAEA"
                    android:background="#FFFFFF"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.button.MaterialButton
                    app:layout_constraintTop_toBottomOf="@id/text4"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:text="SUBMIT"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    style="@style/Widget.MaterialComponents.Button"
                    android:backgroundTint="#32BDD2"
                    app:backgroundTint="#00000029"
                    app:cornerRadius="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"

                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/content5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/content4"
                android:layout_marginTop="30dp"
                android:fillViewport="true"

                >

                <TextView
                    android:id="@id/text4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/content5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Sameera Rautela"
                    android:textColor="#707070"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginStart="35dp"
                    android:layout_marginLeft="35dp"
                    />
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/text4"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Integer porta tellus a lectus volutpat volutpat. Fusce ac fringilla justo, sed iaculis purus. In laoreet non est vel euismod. Ut gravida pretium justo id pretium. Aliquam elementum pellentesque lectus. Nulla odio"
                    android:layout_marginStart="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#747474"
                    android:textSize="14sp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/content6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/content5"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/you"
                    app:layout_constraintTop_toTopOf="@id/content6"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="12sp"
                    android:textColor="#707070"
                    android:layout_marginStart="35dp"
                    android:layout_marginLeft="35dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris quis ex semper, faucibus diam a, ultrices nulla. Sed ex augue, feugiat sagittis pulvinar euismod,"
                    android:textColor="#747474"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text5"
                    android:layout_marginStart="35dp"
                    android:layout_marginLeft="35dp"
                    android:textStyle="normal"
                    android:layout_marginTop="10dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/content7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/content6"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"

                >
                <TextView
                    android:id="@+id/text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Sameera Rautela"
                    android:textSize="12sp"
                    android:textColor="#707070"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/content7"
                    android:layout_marginStart="35dp"
                    android:layout_marginLeft="35dp"
                    />
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/text6"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    android:text="Vestibulum nec feugiat justo. Ut dapibus et orci at gravida. Phasellus lacinia posuere nisi vel interdum. Morbi nec nisl a urna lacinia dapibus in in dui. Maecenas sit amet laoreet nulla. Donec dignissim magna odio, vitae eleifend turpis accumsan eget. Donec aliquet pretium finibus. Donec"
                    android:textColor="#747474"
                    android:textSize="14sp"
                    android:layout_marginStart="35dp"
                    android:layout_marginLeft="35dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/content8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/content7"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="35dp"
                android:background="#F7F7F7"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/image4"
                    app:layout_constraintTop_toTopOf="@id/content8"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:layout_marginTop="10dp"

                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_fiber_manual_record_black_24dp"
                    app:tint="#FF0000"
                    app:layout_constraintLeft_toRightOf="@id/image4"
                    app:layout_constraintTop_toTopOf="@id/content8"
                    android:layout_marginStart="17dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text7"
                    app:layout_constraintTop_toTopOf="@id/content8"
                    app:layout_constraintLeft_toRightOf="@id/image3"
                    android:text="Urvashi Banerjee"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@id/text"
                    app:layout_constraintTop_toBottomOf="@id/text7"
                    app:layout_constraintLeft_toRightOf="@id/image3"
                    android:text="Lorem ipsum doler sit amet."
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#747474"
                    android:textSize="10sp"
                    android:textStyle="normal"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_expand_less_black_24dp"
                    app:tint="#909090"
                    app:layout_constraintLeft_toRightOf="@id/text7"
                    app:layout_constraintTop_toTopOf="@id/content8"
                    android:layout_marginStart="140dp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="20dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/content9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/content8"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:background="#F7F7F7"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="35dp"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/image5"
                    app:layout_constraintTop_toTopOf="@id/content9"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:layout_marginTop="10dp"

                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image6"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_fiber_manual_record_black_24dp"
                    app:tint="#FF0000"
                    app:layout_constraintLeft_toRightOf="@id/image5"
                    app:layout_constraintTop_toTopOf="@id/content9"
                    android:layout_marginStart="17dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text8"
                    app:layout_constraintTop_toTopOf="@id/content9"
                    app:layout_constraintLeft_toRightOf="@id/image6"
                    android:text="Urvashi Banerjee"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
