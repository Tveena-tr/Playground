<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menubar">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/image"
            android:layout_margin="5dp"
            android:contentDescription="TODO" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/req"
        android:layout_marginTop="50dp"
        android:paddingBottom="30dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="REQUISITION"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/TextView01"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/circle2"
                android:gravity="center"
                android:text="1"
                android:textColor="#D3D3D3"
                android:textSize="10sp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:background="@drawable/dottedline"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/TextView03"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/circle2"
                android:gravity="center"
                android:text="2"
                android:textColor="#D3D3D3"
                android:textSize="10sp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:background="@drawable/dottedline"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/TextView04"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/circle2"
                android:gravity="center"
                android:text="3"
                android:textColor="#D3D3D3"
                android:textSize="10sp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:background="@drawable/dottedline"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/TextView05"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/circle2"
                android:gravity="center"
                android:text="4"
                android:textColor="#D3D3D3"
                android:textSize="10sp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:background="@drawable/dottedline"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/TextView06"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:background="@drawable/dottedline"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/TextView07"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/circle2"
                android:gravity="center"
                android:text="6"
                android:textColor="#D3D3D3"
                android:textSize="10sp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="178dp"
        android:background="@color/coloritem"
        android:paddingBottom="15dp"
        android:paddingTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/approval"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/item"
            android:textStyle="bold"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/lorem"
            android:textColor="@color/lorem"
            android:layout_marginTop="30dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:textSize="10dp"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/image2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="360dp"
            android:layout_marginLeft="360dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="315dp"
            android:layout_marginLeft="315dp"
            android:layout_marginTop="45dp"
            android:text="@string/addapproval"
            android:textSize="10dp"
            android:textColor="@color/item"
            android:textStyle="bold"/>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="263dp"
        android:background="#CCCCCC"
        android:layout_marginBottom="50dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="570dp">
        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:textColor="@color/save"
            android:textSize="10sp"
            android:textStyle="bold"
            android:background="@drawable/borderbottom"
            android:paddingBottom="25dp"

            android:layout_marginLeft="25dp"/>
        <Button
            android:id="@+id/button"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@drawable/button"
            android:text="@string/next"
            android:textColor="#FFFFFF"
            android:layout_marginStart="230dp"
            android:layout_marginLeft="230dp"

            />
    </LinearLayout>



</RelativeLayout>