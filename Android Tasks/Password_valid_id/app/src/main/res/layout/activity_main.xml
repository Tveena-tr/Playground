<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    public class MainActivity extends Activity {

    protected void onCreate(Bundle savedInstanceState) {
    super.onCreate(savedInstanceState);
    setContentView(R.layout.activity_main);
    final TextView helloTextView = (TextView) findViewById(R.id.text_view_id);
    helloTextView.setText(R.string.user_greeting);
    }
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_view_id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Forgot password?"
            android:textSize="12dp"
            android:height="60dp"
            android:width="150dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="140dp"
            android:textStyle="bold"
            android:textColor="#747474"
            android:padding="15dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/text_view_id2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="The link to reset your password will be sent to your registered email."
        android:textSize="12dp"
        android:height="60dp"
        android:width="330dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="170dp"
        android:textStyle="bold"
        android:textColor="#747474"
        android:padding="15dp"

        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/text_view_id3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:width="300dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="250dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/text"
            android:hint="Email"
            android:padding="15dp"
            android:textColorHint="#747474"
            android:textStyle="bold"
            android:textSize="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/image"
            android:layout_width="30px"
            android:layout_height="40px"

            android:layout_marginTop="310dp"
            android:layout_marginLeft="65dp"
            />
        <TextView
            android:id="@+id/text_view_id5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is not a valide email"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="310dp"
            android:textColor="#BF574A"
            android:textSize="8dp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/image"
            android:layout_width="30px"
            android:layout_height="40px"

            android:layout_marginTop="338dp"
            android:layout_marginLeft="65dp"
            />
        <TextView
            android:id="@+id/text_view_id7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This email is not registered with us"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="340dp"
            android:textColor="#BF574A"
            android:textSize="8dp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/button_id"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:text="CONTINUE"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="430dp"
            android:background="@drawable/button"
            android:textColor="#FFFFFF"

            />
    </LinearLayout>
    }

</androidx.constraintlayout.widget.ConstraintLayout>