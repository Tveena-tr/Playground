<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <TextView
           android:id="@+id/text_view_id"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:text="Login"
           android:textSize="14dp"
           android:layout_marginLeft="35dp"
           android:layout_marginTop="75dp"
           android:textStyle="bold"
           android:textColorHint="#747474"
           android:padding="15dp"
           />
   </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <EditText
           android:id="@+id/text_view_id2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:height="50dp"
           android:width="300dp"
           android:layout_marginLeft="35dp"
           android:layout_marginTop="150dp"
           android:background="@drawable/text"
           android:hint="Email or Phone Number"
           android:padding="15dp"
           android:textColorHint="#747474"
           android:textStyle="bold"
           android:textSize="10dp"
           />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <ImageView
           android:src="@drawable/image"
           android:layout_width="30px"
           android:layout_height="35px"
           android:layout_marginStart="35dp"
           android:layout_marginTop="210dp"
           android:layout_marginLeft="35dp"
           />
       <TextView
           android:id="@+id/text_view_id4"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="This field is required"
           android:layout_marginStart="55dp"
           android:layout_marginLeft="55dp"
           android:layout_marginTop="210dp"
           android:textColor="#BF574A"
           android:textSize="8dp"

           />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <EditText
           android:id="@+id/text_view_id3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:height="50dp"
           android:width="300dp"
           android:layout_marginLeft="35dp"
           android:layout_marginTop="250dp"
           android:background="@drawable/text"
           android:hint="Password"
           android:padding="15dp"
           android:textColorHint="#747474"
           android:textStyle="bold"
           android:textSize="10dp"
           />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/eye1"
            android:layout_marginTop="265dp"
            android:layout_marginStart="300dp"
            android:layout_marginLeft="300dp"
            />
   </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/image"
            android:layout_width="30px"
            android:layout_height="35px"
            android:layout_marginStart="35dp"
            android:layout_marginTop="310dp"
            android:layout_marginLeft="35dp"
            />
        <TextView
            android:id="@+id/text_view_id6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This field is required"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="310dp"
            android:textColor="#BF574A"
            android:textSize="8dp"

            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_view_id8"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Forgot password?"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="225dp"


            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/button_id"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:text="LOGIN"
            android:textSize="12dp"

            android:layout_marginLeft="100dp"
            android:layout_marginTop="415dp"
            android:background="@drawable/button"
            android:textColor="#FFFFFF"

            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>